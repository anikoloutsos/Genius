<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vncoop.q02.addQuestion"
    android:background="@drawable/background">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imageView"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo"
        android:alpha="0.15"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Αποστολή Ερώτησης"
        android:id="@+id/titleId"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textSize="50dp"
        android:gravity="center" />


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/separatorId"
        android:layout_centerHorizontal="true"
        android:src="@drawable/seperator" />


    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Αποστολή"
        android:id="@+id/sendQueId"
        android:onClick="sendQuestion"
        style="@style/ButtonStyle"
        android:textColor="#ffffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Πίσω"
        android:id="@+id/backId"
        android:onClick="onBack"
        style="@style/ButtonStyle"
        android:textColor="#ffffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_below="@id/separatorId"
        android:layout_above="@id/backId">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/submitQuestion"
                android:textSize="40sp"
                android:gravity="center_horizontal"
                android:hint="Ερώτηση"
                android:inputType="textPersonName|textMultiLine"
                style="@style/QuestionStyleWhite"
                android:layout_marginTop="30dp"/>

            <EditText
                style="@style/QuestionStyleWhite"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/submitAnswer"
                android:textSize="40sp"
                android:gravity="center_horizontal"
                android:hint="Απάντηση"
                android:inputType="textMultiLine"
                android:layout_below="@id/submitQuestion"
                android:layout_marginTop="30dp"
         />
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
