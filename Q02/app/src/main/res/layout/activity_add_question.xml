<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="vncoop.q02.addQuestion"
    android:background="@drawable/background">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="160dp"
        android:id="@+id/submitQuestion"
        android:textSize="30sp"
        android:gravity="center_horizontal"
        android:hint="Ερώτηση"
        android:inputType="text"
        style="@style/QuestionStyleWhite"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        style="@style/QuestionStyleWhite"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/submitAnswer"
        android:textSize="30sp"
        android:gravity="center_horizontal"
        android:hint="Απάντηση"
        android:inputType="text"
        android:layout_centerVertical="true"

        android:layout_centerHorizontal="true"
 />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Αποστολή"
        android:id="@+id/sendQueId"
        android:onClick="sendQuestion"
        style="@style/ButtonStyle"
        android:textColor="#ffffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/submitAnswer"
        android:layout_alignEnd="@+id/submitAnswer" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Πίσω"
        android:id="@+id/backId"
        android:onClick="onBack"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        style="@style/ButtonStyle"
        android:textColor="#ffffffff" />
</RelativeLayout>
