<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".generator"
    android:background="@drawable/background"
    android:id="@+id/something">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewOmada"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/btnSpin"
        android:background="#00000000"
        android:onClick = "getCatOrD"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="154dp"
        android:src="@drawable/zari"
        android:scaleType="fitCenter"
        android:visibility="visible" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/btnCat1Id"
        android:background="#00000000"
        android:visibility="gone"
        android:onClick="choicebtn1"
        android:layout_marginTop="131dp"
        android:layout_below="@+id/textViewOmada"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="37dp"
        android:layout_marginStart="37dp" />
    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/btnCat2Id"
        android:background="#00000000"
        android:visibility="gone"
        android:onClick="choicebtn2"
        android:layout_alignTop="@+id/btnCat1Id"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="34dp"
        android:layout_marginEnd="34dp" />

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/btnDiaId"
        android:background="#00000000"
        android:visibility="gone"
        android:onClick="diamondbtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"/>

</RelativeLayout>
