<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vncoop.q02.SavedGameStatus"
    android:background="@drawable/background">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Αποθηκευμένα Παιχνίδια"
        android:id="@+id/textView1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffffff"
        android:textSize="45dp"
        android:gravity="center" />


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seperator"
        android:src="@drawable/seperator"
        android:layout_below="@+id/textView1" />


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView2"
        android:layout_below="@id/seperator">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:baselineAligned="false"
            android:id="@+id/ldid">


            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_gravity="center"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/rl1"
                android:layout_margin="20dp"
                android:visibility="gone"
                style="@style/ButtonStyle"
                android:onClick="onsave1">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/date1"
                    android:visibility="gone"
                    android:textColor="#ffffffff"
                    android:textSize="35sp"
                    android:text="20 / 3 / 2015"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal"
                    />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Ομαδα1 : Διαμαντια 3"
                    android:id="@+id/omada1save1"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:layout_below="@id/date1"
                    android:background="@drawable/blue_color"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Ομαδα2 : Διαμαντια 0"
                    android:id="@+id/omada2save1"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:layout_below="@id/omada1save1"
                    android:background="@drawable/red_color"
                    android:visibility="gone" />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Ομαδα3 : Διαμαντια 5"
                    android:id="@+id/omada3save1"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:layout_below="@id/omada2save1"
                    android:background="@drawable/purple_color"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Ομαδα4 : Διαμαντια 0"
                    android:id="@+id/omada4save1"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:layout_below="@id/omada3save1"
                    android:background="@drawable/pink_color"
                    android:visibility="gone" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/rl2"
                android:layout_margin="20dp"
                style="@style/ButtonStyle"
                android:onClick="onsave2"
                android:visibility="gone">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/date2"
                    android:visibility="gone"
                    android:textColor="#ffffffff"
                    android:textSize="35sp"
                    android:text="20 / 3 / 2015"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal"
                    />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Ομαδα1 : Διαμαντια 3"
                    android:id="@+id/omada1save2"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:layout_below="@id/date2"
                    android:background="@drawable/blue_color"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Ομαδα2 : Διαμαντια 0"
                    android:id="@+id/omada2save2"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:layout_below="@id/omada1save2"
                    android:background="@drawable/red_color"
                    android:visibility="gone" />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Ομαδα3 : Διαμαντια 5"
                    android:id="@+id/omada3save2"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:layout_below="@id/omada2save2"
                    android:background="@drawable/purple_color"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Ομαδα4 : Διαμαντια 0"
                    android:id="@+id/omada4save2"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:layout_below="@id/omada3save2"
                    android:background="@drawable/pink_color"
                    android:visibility="gone" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_gravity="center"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/rl3"
                android:layout_margin="20dp"
                style="@style/ButtonStyle"
                android:onClick="onsave3"
                android:visibility="gone">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/date3"
                    android:visibility="gone"
                    android:textColor="#ffffffff"
                    android:textSize="35sp"
                    android:text="20 / 3 / 2015"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal"
                    />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Ομαδα1 : Διαμαντια 3"
                    android:id="@+id/omada1save3"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:layout_below="@id/date3"
                    android:background="@drawable/blue_color"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Ομαδα2 : Διαμαντια 0"
                    android:id="@+id/omada2save3"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:layout_below="@id/omada1save3"
                    android:background="@drawable/red_color"
                    android:visibility="gone" />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Ομαδα3 : Διαμαντια 5"
                    android:id="@+id/omada3save3"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:layout_below="@id/omada2save3"
                    android:background="@drawable/purple_color"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Ομαδα4 : Διαμαντια 0"
                    android:id="@+id/omada4save3"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:layout_below="@id/omada3save3"
                    android:background="@drawable/pink_color"
                    android:visibility="gone" />


            </RelativeLayout>

        </LinearLayout>

    </ScrollView>


</RelativeLayout>
