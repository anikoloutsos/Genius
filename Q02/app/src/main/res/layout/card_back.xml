<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="vncoop.q02.QuestionScreen"
    android:background="#00ffffff"
    android:visibility="visible"
    android:id="@+id/layout">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="500dp"
        android:id="@+id/card"
        android:src="@drawable/cim_que"

        android:layout_centerInParent="true" />



    <FrameLayout
        android:layout_width="220dp"
        android:layout_height="380dp"
        android:id="@+id/back"
        android:layout_centerInParent="true"
        >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="poutses"
            android:id="@+id/answerid"
            android:visibility="gone"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/answerbtnid"
            android:layout_centerHorizontal="true"
            style="@style/QuestionStyleWhite"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/questionId"
            android:layout_marginTop="0dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:text="kategoria"
            android:id="@+id/categoryTitle"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_marginTop="0dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="top|center" />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            android:text="Λάθος"
            android:id="@+id/wrongbtnid"
            android:onClick = "onWrong"
            android:visibility="visible"
            android:src="@drawable/wrong_selector"
            android:background="#00ffffff"
            android:layout_gravity="left|bottom"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Η απάντηση ηταν σωστή ή λάθος;"
            android:layout_marginBottom="80dp"
            android:id="@+id/hintId"
            android:layout_gravity="center_horizontal|bottom"
            style="@style/Artstyle" />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            android:text="Σωστά"
            android:id="@+id/correctbtnid"
            android:onClick = "onCorrect"
            android:visibility="visible"
            android:src="@drawable/right_selector"
            android:background="#00ffffff"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="20dp"
            android:layout_gravity="right|bottom" />
    </FrameLayout>


</RelativeLayout>