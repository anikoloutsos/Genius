

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context=".mainMenu"    android:background="@drawable/background">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/logoId"
        android:src="@drawable/logo"
        android:scaleType="fitCenter"
        android:layout_centerHorizontal="true"
         />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:id="@+id/ngid"
        android:text="Νέο Παιχνίδι"
        android:onClick="NGClick"
        style="@style/ButtonStyle"
        android:textColor="#ffffffff"
        android:layout_centerHorizontal="true"


    />

    <Button
        android:id="@+id/goid"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:onClick="GoOnClick"
        android:text="Συνέχεια Παιχνιδιού"
        style="@style/ButtonStyle"
        android:textColor="#ffffffff"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:onClick="rulesClick"
        android:text="Κανόνες"
        android:textColor="#ffffffff"
        android:id="@+id/rulesId"
        style="@style/ButtonStyle"
        android:layout_centerHorizontal="true"
        android:gravity="center"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:text="Προσθήκη Ερώτησης"
        android:id="@+id/addQueId"
        android:onClick="addQue"
        style="@style/ButtonStyle"
        android:textColor="#ffffffff"
        android:gravity="center"/>





</RelativeLayout>
