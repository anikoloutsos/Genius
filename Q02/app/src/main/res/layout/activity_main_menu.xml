

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".mainMenu"    android:background="@drawable/background">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:baselineAligned="false">


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/imageView"
                android:src="@drawable/logo"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ngid"
                android:text="Νέο Παιχνίδι"
                android:onClick="NGClick"
                style="@style/ButtonStyle"
                android:textColor="#ffffffff"
                android:layout_centerHorizontal="true" />

            <Button
                android:id="@+id/goid"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="GoOnClick"
                android:text="Συνέχεια Παιχνιδιού"
                style="@style/ButtonStyle"
                android:textColor="#ffffffff"
                android:layout_marginTop="1dp"
                android:layout_below="@+id/ngid"
                android:layout_centerHorizontal="true" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="rulesClick"
                android:text="Κανόνες"
                android:textColor="#ffffffff"
                android:layout_marginTop="1dp"
                android:layout_below="@+id/goid"
                android:id="@+id/rulid"
                style="@style/ButtonStyle"
                android:layout_centerHorizontal="true" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_below="@+id/rulid"
                android:text="Προσθήκη Ερώτησης"
                android:id="@+id/addQueId"
                android:onClick="addQue"
                style="@style/ButtonStyle"
                android:textColor="#ffffffff" />



        </RelativeLayout>
    </LinearLayout>






</RelativeLayout>
