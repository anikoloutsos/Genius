<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".mainMenu"    android:background="@drawable/background">


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageView"
        android:src="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp" />

    <ImageButton
        android:layout_marginTop="35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ngid"
        android:onClick="NGClick"
        android:src="@drawable/newgame_selector"
        android:background="#00ffffff"
        android:scaleType="fitCenter"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/goid"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="GoOnClick"
        android:src="@drawable/goon_selector"
        android:background="#00ffffff"
        android:scaleType="fitCenter"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/ngid"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="rulesClick"
        android:src="@drawable/rules_selector"
        android:background="#00ffffff"
        android:scaleType="fitCenter"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/goid"
        android:id="@+id/imageButton3"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
