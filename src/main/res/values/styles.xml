<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="WhiteRoundedStyle" parent="android:style/Widget.TextView">
        <item name="android:background">@drawable/white_rounded</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">25sp</item>

    </style>

    <style name="ButtonStyle" parent="android:style/Widget.TextView">
        <item name="android:background">@drawable/button</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">30sp</item>

    </style>


    <style name="DarkRoundedStyle" parent="android:style/Widget.TextView">
        <item name="android:background">@drawable/dark_rounded</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>

    </style>
</resources>
